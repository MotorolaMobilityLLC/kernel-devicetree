&tlmm{
	haptic_irq {
		haptic_irq_default: default {
			mux {
				pins = "gpio47";
				function = "gpio";
			};
			config {
				pins = "gpio47";
				bias-pull-up;
			};
		};
	};
};

&qupv3_se1_i2c {
	status = "okay";

	aw8695_haptic@5A {
		compatible = "awinic,aw8695_haptic";
		reg = <0x5A>;
		reset-gpio = <&tlmm 46 0>;
		irq-gpio = <&tlmm 47 0>;
		haptic-context-gpio = <&tlmm 18 0>;
		long-gain-normal = <0x80>;
		long-gain-reduced = <0x80>;
		pinctrl-names = "default";
		pinctrl-0 = <&haptic_irq_default>;
		status = "okay";
	};
};
