#include "waipio-moto-common-overlay-base.dtsi"

#include "waipio-moto-common-overlay.dtsi"
#include "waipio-moto-common-redriver.dtsi"
#include "waipio-hiphi-fingerprint.dtsi"
#include "waipio-hiphi-row-touchscreen-overlay.dtsi"
#include "waipio-hiphi-haptics-overlay.dtsi"
#include "waipio-moto-common-charger.dtsi"
#include "waipio-hiphic-thermal-overlay.dtsi"
#include "waipio-pm8010-spmi.dtsi"

&pm8350c_rgb {
	red {
		label = "charging";
	};

	green {
		status = "disabled";
	};

	blue {
		status = "disabled";
	};
};

&usb0 {
	ssusb_redriver = <&redriver>;

	port {
		usb_port0: endpoint {
			remote-endpoint = <&usb_port0_connector>;
		};
	};
};

&usb2_phy0 {
	qcom,param-override-seq =
		<0xc8 0x70
		0x26 0x74>;
};

&tlmm {
	redriver_enable: redriver_enable {
		mux {
			pins = "gpio19";
			function = "gpio";
		};

		config {
			pins = "gpio19";
			drive-strength = <2>;
			bias-disable; /* NO PULL */
			output-high;
		};
	};
	redriver_disable: redriver_disable {
		mux {
			pins = "gpio19";
			function = "gpio";
		};

		config {
			pins = "gpio19";
			drive-strength = <2>;
			output-low;
		};
	};

	bq27426_irq_flip: bq27426-irq-battery-flip {
		mux {
			pins = "gpio43";
			function = "gpio";
		};

		config {
			pins = "gpio43";
			drive-strength = <2>;
			bias-disable;
			input-enable;
		};
	};
};

&qupv3_se2_spi {
	status = "disabled";
};

&qupv3_se2_i2c {
	status = "ok";
	bq27426_flip: bq27426-battery-flip@55 {
		compatible = "ti,bq27426";
		reg = <0x55>;
		pinctrl-names = "default";
		pinctrl-0 = <&bq27426_irq_flip>;
		interrupt-parent = <&tlmm>;
		interrupts = <43 0>;
		vdd-i2c-supply = <&S10B>;
		design-capacity = <712>;
		mmi,fg-psy-name = "fg_flip_battery";
		mmi,batt-profile-name = "NM40_ATL_712MAH";
		mmi,temp-source = <1>;
	};
};

&qupv3_se9_i2c {
	status = "ok";
	qcom,clk-freq-out = <1000000>;
	#address-cells = <1>;
	#size-cells = <0>;
	nq@28 {
		compatible = "qcom,sn-nci";
		reg = <0x28>;
		qcom,sn-irq = <&tlmm 46 0x00>;
		qcom,sn-ven = <&tlmm 34 0x00>;
		qcom,sn-firm = <&tlmm 45 0x00>;
		qcom,sn-clkreq = <&tlmm 35 0x00>;
		qcom,sn-vdd-1p8-supply = <&S10B>;
		qcom,sn-vdd-1p8-voltage = <1800000 1800000>;
		qcom,sn-vdd-1p8-current = <157000>;
		interrupt-parent = <&tlmm>;
		interrupts = <46 0>;
		interrupt-names = "nfc_irq";
		pinctrl-names = "nfc_active", "nfc_suspend";
		pinctrl-0 = <&nfc_int_active &nfc_enable_active>;
		pinctrl-1 = <&nfc_int_suspend &nfc_enable_suspend>;
	};
};

&redriver {
	status = "ok";
	vio-supply = <&L8C>;
};

&qupv3_se18_i2c {
	status = "ok";
};

&soc {
	gpio_keys {
		pinctrl-0 = <&key_vol_up_default &google_key_default>;

		google_key {
			label = "google_key";
			gpios = <&tlmm 116 GPIO_ACTIVE_LOW>;
			linux,input-type = <1>;
			linux,code = <KEY_SEARCH>;
			gpio-key,wakeup;
			debounce-interval = <15>;
			linux,can-disable;
		};
	};
};

&tlmm{
	google_key_default: google_key_default {
		mux {
			pins = "gpio116";
			function = "gpio";
		};

		config {
			pins = "gpio116";
			drive-strength = <2>;
			bias-pull-up;
		};
	};
};

&qupv3_se5_i2c {
	status = "disabled";
};

&pm8350b_haptics {
	status = "ok";
};

&sdhc_2 {
	status = "disabled";
};

&chosen {
	mmi,dynamic_devices = "/soc/i2c@990000/st_fts@49", "/soc/i2c@990000/goodix_ts_i2c@5d";
};

&ucsi {
	connector {
		port {
			usb_port0_connector: endpoint {
				remote-endpoint = <&usb_port0>;
			};
		};
	};
};
