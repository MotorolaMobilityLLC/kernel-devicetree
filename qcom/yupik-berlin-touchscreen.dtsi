&qupv3_se13_spi {
	status = "disabled";
};

&qupv3_se13_i2c {
	status = "ok";
	st_fts@49 {
		mmi,status = "/chosen","mmi,panel_name","contains","csot_nt37701";
		compatible = "st,fts";
		reg = <0x49>;
		interrupt-parent = <&tlmm>;
		interrupts = <81 0x2008>;
		st,reset-gpio = <&tlmm 105 0>;
		st,irq-gpio = <&tlmm 81 0x2008>;
		st,regulator_avdd = "pm8350c_l3";
		st,regulator_dvdd = "pm8350c_l8";
		fts,x-max = <1080>;
		fts,y-max = <2400>;
		panel = <&mot_csot_nt37701_667_1080x2400_dsc_cmd>;
	};
};
