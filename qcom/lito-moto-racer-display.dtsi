#include <dt-bindings/clock/mdss-7nm-pll-clk.h>
#include "lito-sde-display.dtsi"
#include "dsi-panel-mot-dummy-qhd-video.dtsi"
#include "dsi-panel-mot-boe-667-1080p-racer-cmd.dtsi"


&sde_dsi1 {
	status = "disabled";
};

&pm8150a_amoled {
	status = "ok";
};

&mdss_mdp {
	connectors = <&sde_wb &sde_dsi &sde_rscc>;
};

&mot_boe_667_1080p_cmd_v0 {
        qcom,platform-te-gpio = <&tlmm 10 0>;
	qcom,platform-reset-gpio = <&pm8150l_gpios 3 0>;
        qcom,panel-supply-entries = <&dsi_panel_pwr_supply>;
        qcom,mdss-dsi-no-panel-on-read-support;

        //qcom,mdss-dsi-t-clk-post = <0x0f>;
        //qcom,mdss-dsi-t-clk-pre = <0x3a>;

	qcom,dsi-select-clocks = "mux_byte_clk0", "mux_pixel_clk0";
        qcom,mdss-dsi-display-timings {
                timing@0{
                       /* Phy 4; w=360 h=2340; 60hz; 3x dsc */
                       qcom,mdss-dsi-panel-phy-timings = [00 0D 03 03 1D 1C 04
                                                        03 01 02 04 00 0D 13];

		       qcom,display-topology = <2 2 1>;
                       qcom,default-topology-index = <0>;

                };
        };
};

&mot_dummy_vid_qhd {
	qcom,platform-te-gpio = <&tlmm 10 0>;
	qcom,platform-reset-gpio = <&pm8150l_gpios 3 0>;

	qcom,dsi-select-clocks = "mux_byte_clk0", "mux_pixel_clk0";
	qcom,mdss-dsi-display-timings {
		timing@0 {
			qcom,mdss-dsi-panel-phy-timings = [00 0B 02 02 1C 1C 03
							02 01 02 04 00 0C 12];
			qcom,display-topology = <1 0 1>;
			qcom,default-topology-index = <0>;
		};
	};
};
