/dts-v1/;
/plugin/;

#include "kona-moto-common-overlay.dtsi"

/ {
	model = "Burton";
	compatible = "qcom,kona-burton", "qcom,kona-moto", "qcom,kona";
	qcom,msm-id = <356 0x20000>;
	qcom,board-id = <0 0xA100>;
};

/*
 * Burton HW rev EVT1 specific changes go here
 */
&spmi_bus {
	qcom,pm8150b@2 {
		pm8150b_mmi {
			/delete-property/qcom,mmi-temp-zones;
			qcom,mmi-temp-zones =	<0 4200 400 0>,
			                        <10 4200 1000 400>,
			                        <15 0 1000 1000>,
			                        <100 4200 2000 1400>,
			                        <200 4200 1000 0>;
		};
	};
};

&pm8150_vadc {
	img108mp@4c {
		reg = <ADC_XO_THERM_PU2>;
		label = "img108mp_therm";
		qcom,ratiometric;
		qcom,hw-settle-time = <200>;
		qcom,pre-scaling = <1 1>;
	};

	img25mp@4e {
		reg = <ADC_AMUX_THM2_PU2>;
		label = "img25mp_therm";
		qcom,ratiometric;
		qcom,hw-settle-time = <200>;
		qcom,pre-scaling = <1 1>;
	};
};

&pm8150_adc_tm {
	io-channels = <&pm8150_vadc ADC_XO_THERM_PU2>,
			<&pm8150_vadc ADC_AMUX_THM1_PU2>,
			<&pm8150_vadc ADC_AMUX_THM2_PU2>;

	img108mp@4c {
		reg = <ADC_XO_THERM_PU2>;
		qcom,ratiometric;
		qcom,hw-settle-time = <200>;
	};

	img25mp@4e {
		reg = <ADC_AMUX_THM2_PU2>;
		qcom,ratiometric;
		qcom,hw-settle-time = <200>;
	};
};

&thermal_zones {
	img108mp-therm-usr {
		polling-delay-passive = <0>;
		polling-delay = <0>;
		thermal-governor = "user_space";
		thermal-sensors = <&pm8150_adc_tm ADC_XO_THERM_PU2>;
		trips {
			active-config0 {
				temperature = <125000>;
				hysteresis = <1000>;
				type = "passive";
			};
		};
	};

	img25mp-therm-usr {
		polling-delay-passive = <0>;
		polling-delay = <0>;
		thermal-governor = "user_space";
		thermal-sensors = <&pm8150_adc_tm ADC_AMUX_THM2_PU2>;
		trips {
			active-config0 {
				temperature = <125000>;
				hysteresis = <1000>;
				type = "passive";
			};
		};
	};
};
